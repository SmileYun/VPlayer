<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />

            <gradient
                android:angle="270"
                android:centerColor="#55B9F3EE"
                android:centerY="0.75"
                android:endColor="#ffB9D3EE"
                android:startColor="#ffBFEFFF" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ffFD5C5C"
                    android:centerY="0.75"
                    android:endColor="#ffCD5C5C"
                    android:startColor="#ffCD5B45" />
            </shape>
        </clip>
    </item>

</layer-list>